# Break down the door!
# It will take many hits, so use a loop.

# This function is put at the top, else the compiler insist on using this.simple_boots
def simple_boots(move):
    if move == 'right':
        self.moveRight()
    elif move == 'left':
        self.moveLeft()
    elif move == 'up':
        self.moveUp()
    elif move == 'down':
        self.moveDown()

def longsword(target):
    self.attack(target)

orders =  [{'action':'attack','target':'Door'},{'action':'attack','target':'Door'}, {'action':'move','direction':'up'}]

while 1 <2:
for order in orders:
    if order['action'] == 'move':
        simple_boots(order['direction'])
    elif order['action'] == 'attack':
        longsword(order['target'])

